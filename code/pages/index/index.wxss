page{
  width: 100%;
  padding-top: 80rpx;
}
.bg{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: -0rpx;
  z-index: -100;
  opacity:75%;
}

.title{
  width: 400rpx;
  margin: 0 auto 20rpx auto;
  text-align: center;
  color: white;
  font-weight: 700;
  font-size: 55rpx;
  letter-spacing: 6rpx;  
}



.box{
  width: 430rpx;
  height: 90rpx;
  background-color: white;
  border-radius: 16rpx;
  margin: 0 auto 50rpx auto;
  display: flex;
  align-items: center;
}
.box:active{
  background-color:gainsboro;
}

.box_margin_top{
  margin-top: 200rpx;
}

.img{
  width: 70rpx;
  height: 70rpx;
  margin: auto 30rpx auto 30rpx;
}


.txt{
  font-size: 33rpx;
  font-weight: 600;
  letter-spacing: 3rpx;
}